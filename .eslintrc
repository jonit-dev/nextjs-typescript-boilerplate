{
  "extends": ["nextjs"],
  "plugins": ["unused-imports"],
  "rules": {
    "import/no-unresolved": "off",
    "prettier/prettier": "off",
    "react/jsx-filename-extension": "off",
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
